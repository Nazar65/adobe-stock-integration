<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="AdobeStockSection">
        <element name="slideOutPanelButton" type="button" selector="#search_adobe_stock"/>
        <element name="panelTitle" type="text" selector="//aside[@role='dialog']/div/header/h1[@class='modal-title']"/>
        <element name="panelCloseButton" type="text" selector="//aside[@aria-labelledby='modal-title-11']/div/header/button[@class='action-close']"/>
        <element name="searchInput" type="input" selector="//div[@class='admin__data-grid-header'][(not(ancestor::*[@class='sticky-header']) and not(contains(@style,'visibility: hidden'))) or (ancestor::*[@class='sticky-header' and not(contains(@style,'display: none'))])]//input[@id='words'][1]"/>
        <element name="imagesThumbnails" type="text" selector=".masonry-image-block img"/>
        <element name="systemAclActions" type="checkbox" selector="//a[text()='Adobe Stock']/parent::li[contains(.,'Actions')]//a"/>
        <element name="firstImageAfterSearch" type="text" selector="div[class='masonry-image-column'][data-repeat-index='0'] img"/>
    </section>
</sections>
